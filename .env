# ===========================================
# DATABASE CONFIGURATION (H2 - Development)
# ===========================================
DB_TYPE=h2
DB_URL=jdbc:h2:mem:codehappen
DB_USERNAME=sa
DB_PASSWORD=
H2_CONSOLE_ENABLED=true
H2_CONSOLE_PATH=/h2-console

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=CodeCrafters2024SecretKeyForJWTTokensVerySecureAndLong!@#$%
JWT_EXPIRATION_MS=86400000
# 86400000 ms = 24 horas

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# Añade aquí las URLs del frontend (React - Vite usa 5173 por defecto)

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=5MB
MAX_REQUEST_SIZE=10MB
UPLOAD_DIR=./uploads

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=DEBUG
# Para desarrollo usa DEBUG, para producción INFO o WARN

# ===========================================
# JPA/HIBERNATE
# ===========================================
JPA_SHOW_SQL=true
JPA_DDL_AUTO=create-drop
# create-drop: borra y crea la BD cada vez (ideal para desarrollo)
# update: mantiene datos entre reinicios
# validate: solo valida el esquema