# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ===========================================
# DATABASE CONFIGURATION (H2 - Development)
# ===========================================
DB_TYPE=h2
DB_URL=jdbc:h2:mem:codehappen
DB_USERNAME=sa
DB_PASSWORD=
H2_CONSOLE_ENABLED=true
H2_CONSOLE_PATH=/h2-console

# ===========================================
# JPA/HIBERNATE
# ===========================================
JPA_SHOW_SQL=true
JPA_DDL_AUTO=create-drop
# create-drop: borra y crea la BD cada vez (ideal para desarrollo)
# update: mantiene datos entre reinicios
# validate: solo valida el esquema

# ===========================================
# JWT CONFIGURATION
# ===========================================
# ⚠️ IMPORTANTE: Este secret debe ser Base64 y muy largo (mínimo 256 bits)
# Para generar uno nuevo: openssl rand -base64 64
JWT_SECRET=Q29kZUNyYWZ0ZXJzMjAyNFNlY3JldEtleUZvckpXVFRva2Vuc1ZlcnlTZWN1cmVBbmRMb25nIUAjJCVBQkNERUZHSElKS0xNTk9QUVJTVFVWV1hZWg==
JWT_EXPIRATION_MS=86400000
# 86400000 ms = 24 horas

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4200
# React (Vite usa 5173, CRA usa 3000), Angular usa 4200

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=5MB
MAX_REQUEST_SIZE=10MB
UPLOAD_DIR=./uploads

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
# Para desarrollo usa DEBUG, para producción INFO o WARN